<?xml version="1.0"?>
<project name="Shooter Game" default="info">
    <property name="destination.dir" value="out"/>
    <property name="source" value="src"/>
    <property name="java-file" value="java-no-txt"/>
    <property name="source" value="src"/>
    <property name="build.dir" value="target"/>
    <property name="doc.dir" value="doc"/>


    <target name="info">
        <echo>Welcome to the SHOOTER GAME!</echo>
    </target>

    <target name="first" depends="info">
        <echo>A game about shooting</echo>
    </target>

    <target name="second" depends="first">
        <echo>A game about SKILLS! </echo>
    </target>

    <target name="copy-files">
        <copy todir ="${destination.dir}">
            <fileset dir="${source}"> </fileset>
        </copy>
    </target>

    <target name="java-no-text">
        <copy todir ="${java-file}">
            <fileset dir="${source}">
                <include name="**/*.java"/>
                <exclude name="**/*.txt"/>
            </fileset>
        </copy>
    </target>

    <target name="build">
        <mkdir dir="${build.dir}"/>
        <javac includeantruntime="false" destdir="${build.dir}" source="1.8" target="1.8">
            <src path="${source}"/>
        </javac>
    </target>

    <target name="generate-java-doc">
        <javadoc packagenames="com.shooter.game.project*" sourcepath="${source}" destdir="${doc.dir}" version="${ant.java.version}" windowtitle="Test ANT Documentation">
            <fileset dir="."></fileset>
            <doctitle><![CDATA[= Test Documentation =]]></doctitle>
            <bottom>
                <![CDATA[Copyright Â© ${copyright.year}. All Rights Reserved.]]>
            </bottom>
        </javadoc>
        <echo message="java doc has been generated!" />
    </target>

    <target name="build-jar" depends="build">
        <jar destfile="${dst.dir}/artifact/"
             basedir="${build.dir}"
        />
    </target>





</project>