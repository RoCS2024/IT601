<?xml version="1.0"?>
<project name="Shooting Game Application" default="build">
    <property name="author" value="Zhaira Pacheco"/>
    <property name="dst.dir" value="out"/>
    <property name="source" value="src"/>
    <property file="build.properties"/>
    <property name="build.dir" value="target"/>
    <property name="doc.dir" value="doc"/>

    <target name="copy-files">
        <copy todir="${dst.dir}">
            <fileset dir="${source}">
                <patternset refid="java.files.without.text.files"/>
                <include name="**/*.docx"/>
            </fileset>
        </copy>
    </target>

    <patternset id="java.files.without.text.files">
        <include name="**/*.java"/>
        <exclude name="**/**.txt"/>
    </patternset>

    <target name="build">
        <mkdir dir="${build.dir}"/>
        <javac includeantruntime="false" destdir="${build.dir}" source="1.8" target="1.8">
            <src path="${source}"/>
        </javac>
    </target>

    <target name="generate-javadoc">
        <javadoc packagenames="com.shooting.game.enemy*" sourcepath="${source}" destdir="${doc.dir}" version="${version}" windowtitle="Shooting Game Application">
            <fileset dir="."></fileset>
            <doctitle><![CDATA[= Shooting Game =]]></doctitle>
            <bottom>
                <![CDATA[Copyright Â© ${copyright.year}. All Rights Reserved.]]>
            </bottom>
        </javadoc>
        <echo message="java doc has been generated!" />
    </target>

    <target name="build-jar" depends="build">
        <jar destfile="${dst.dir}/artifact/"
             basedir="${build.dir}"
        />
    </target>
</project>